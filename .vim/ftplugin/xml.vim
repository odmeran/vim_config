" --------------------------------------------------------------------
" 							TAB CHARACTERS
" --------------------------------------------------------------------

autocmd FileType xml setlocal shiftwidth=2 tabstop=2

" --------------------------------------------------------------------
" 								KEYMAPS
" --------------------------------------------------------------------

" Comment & uncomment (no visual mode; one line only)
nmap <S-C>  :s/\(\s*\)\(.*\)/\1<!--\2--><cr>:noh<cr>
nmap d<S-C> :s/\(\s*\)<!--\(.*\)-->/\1\2<cr>:noh<cr>
